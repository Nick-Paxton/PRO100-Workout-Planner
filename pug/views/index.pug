extends layout

block links
  link(rel='stylesheet', href='./stylesheets/style.css')
  link(rel='stylesheet', href='./stylesheets/index.css')
  script(src="./javascripts/index.js" defer)

block maincontent
  div#myForm.form-popup
    form.form-container
      h1#workout-head Add Workout
      label(for='workoutName')
        b Workout Name
      input#workoutName(type='text' placeholder='Workout Name' name='workoutName' required='')
      label(for='workoutDes')
        b Workout Description
      textarea#workoutDes(name='workoutDes' rows='4' cols='35' placeholder='Workout Description')
      label(for='reps')
        b Reps
      input#reps(type='number' placeholder='Reps Count' name='reps' required='')
      label(for='sets')
        b Sets
      input#sets(type='number' placeholder='Sets Count' name='sets' required='')
      button#addButton.btn(type='button') Add Workout
      button.btn.cancel(type='button' onclick='closePopup()') Close
  div#addTitle.form-popup
    form.form-container
      h1 Please Add a title to your workout 
      label(for="title")
      input#title(type="text" placeholder='Title' name='title' required='')
      button.btn#share-button(type='button') Share Workout 
      button.btn.cancel(type='button' onclick='closeTitlePop()') Close
  div.intro 
    h1 Welcome to our Workout Planner 
    p Add workouts to the weekly calendar below 
  div#week
    div.day Sunday
      button(onclick="displayPopup(0)").addWorkout +
      ul#list0.list
    div.day Monday
      button(onclick="displayPopup(1)").addWorkout +
      ul#list1.list
    div.day Tuesday
      button(onclick="displayPopup(2)").addWorkout +
      ul#list2.list
    div.day Wednesday
      button(onclick="displayPopup(3)").addWorkout +
      ul#list3.list
    div.day Thursday
      button(onclick="displayPopup(4)").addWorkout +
      ul#list4.list
    div.day Friday
      button(onclick="displayPopup(5)").addWorkout +
      ul#list5.list
    div.day Saturday
      button(onclick="displayPopup(6)").addWorkout +
      ul#list6.list
  div#share-buttons
    button(onclick="displayTitlePop(0)").share-workout Share Sunday Workout  
    button(onclick="displayTitlePop(1)").share-workout Share Monday Workout
    button(onclick="displayTitlePop(2)").share-workout Share Tuesday Workout  
    button(onclick="displayTitlePop(3)").share-workout Share Wednesday Workout  
    button(onclick="displayTitlePop(4)").share-workout Share Thursday Workout  
    button(onclick="displayTitlePop(5)").share-workout Share Friday Workout  
    button(onclick="displayTitlePop(6)").share-workout Share Saturday Workout  
  button.save-workouts#save-workouts Save Workouts
